public class ProcessImage {
    public PCB Pcb_data;
    public int[] code;
    //to do: other variables help you computing the latency, response

    public ProcessImage(String process) {

        String[] x = process.split(",");        //splits process string for use
        long AT = System.currentTimeMillis();   //*
        int pid = Integer.parseInt(x[0]);       //*
        int AO = Integer.parseInt(x[1]);        // get process information
        int Priority = Integer.parseInt(x[2]);  //*
        int BS = Integer.parseInt(x[3]);        //*
        code = new int[BS];                     //get burst sequence

        this.Pcb_data = new PCB(pid, AO, Priority, AT, PCB.State.New);
        //set PCB data, code and others
        //set state as "NEW";
    }
}
